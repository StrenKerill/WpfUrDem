<Page x:Class="WpfUr.Pages.OwnerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfUr.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OwnerPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="120*"/>
        </Grid.RowDefinitions>
        <StackPanel Background="AliceBlue" Grid.Row="0"/>
        <Label Content="Вычисление корней" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 20 0" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <Button Content="Квадратное уравнение" Margin="0 0 20 0" Width="200" Height="30" FontSize="17" Click="btnKvUr"/>
            <Button Click="btnLUr" Content="Линейное уравнение" Width="200" Height="30" FontSize="17"/>
        </StackPanel>
    </Grid>
</Page>
